<Page x:Class="RTLSDR.FMDAB.UNO.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:rtl="using:RTLSDR.Common"
      xmlns:local="using:RTLSDR.FMDAB.UNO"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      DataContext="{Binding MainPageViewModel, RelativeSource={RelativeSource Self}}">

      <StackPanel>

        <Grid>
          <Grid.RowDefinitions>
              <RowDefinition Height="auto" />            
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
              <ColumnDefinition Width="30*" />
              <ColumnDefinition Width="60*" />
              <ColumnDefinition Width="10*" />
          </Grid.ColumnDefinitions>

          <TextBlock Grid.Column="0" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Bottom" Text="{Binding ActiveServiceName}" FontSize="40"/>
          <TextBlock Grid.Column="1" HorizontalAlignment="Right" Margin="5" VerticalAlignment="Bottom" Text="{Binding FreqHR}" FontSize="40"/>
          <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Bottom" Text="{Binding FreqUnitHR}" FontSize="15"/>
        </Grid>

        <Button Content="Tune" Click="OnTuneButtonClicked" HorizontalAlignment="Center"/>

        <Grid>
            <ListView 
              ItemsSource="{Binding Services}"
              IsItemClickEnabled="True"
              SelectedItem="{Binding SelectedService, Mode=TwoWay}"
              ItemClick="OnServiceClick">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="rtl:RadioService">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" FontSize="20" Margin="5"/>
                            <TextBlock Text="{Binding Age}" FontSize="20" Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <ScrollViewer>
          <Grid>
            <StackPanel
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            </StackPanel>
          </Grid>
        </ScrollViewer>

      </StackPanel>

</Page>
