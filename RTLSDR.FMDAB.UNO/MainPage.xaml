<Page x:Class="RTLSDR.FMDAB.UNO.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:rtl="using:RTLSDR.Common"
      xmlns:local="using:RTLSDR.FMDAB.UNO"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      DataContext="{Binding MainPageViewModel, RelativeSource={RelativeSource Self}}">

      <StackPanel>

      <TextBlock Text="{Binding FreqHR}" HorizontalAlignment="Center" />
      <Button Content="Tune" Click="OnTuneButtonClicked" HorizontalAlignment="Center"/>


        <Grid>
            <ListView ItemsSource="{Binding Services}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="rtl:RadioService">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" FontSize="20" Margin="5"/>
                            <TextBlock Text="{Binding Age}" FontSize="20" Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <ScrollViewer>
          <Grid>
            <StackPanel
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            </StackPanel>
          </Grid>
        </ScrollViewer>

      </StackPanel>

</Page>
