    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "DAB 8C, service 1175 from RTL",
            //"type": "dotnet",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/RTLSDR.FMDAB.Console/bin/Debug/net9.0/RTLSDR.FMDAB.Console.dll",
            "args": ["-dab", "-f", "199360000", "-sn", "1175", "-sr" , "2048000" ]
        },
        {
            "name": "DAB 8D, from RTL",
            //"type": "dotnet",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/RTLSDR.FMDAB.Console/bin/Debug/net9.0/RTLSDR.FMDAB.Console.dll",
            "args": ["-dab","-f", "8D", "-sr" , "2048000"]
        },
        {
            "name": "DAB 8D, from RTL and save",
            //"type": "dotnet",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/RTLSDR.FMDAB.Console/bin/Debug/net9.0/RTLSDR.FMDAB.Console.dll",
            "args": ["-dab","-f", "8D", "-sr" , "2048000", "-oraw", "/temp/rec.raw" ]
        },
        {
            "env": {
                "ALSA_DEBUG": "0",
                "ALSA_DEBUG_LEVEL": "0"
            },

            "name": "FM play 96.9 FM from RTL",
            //"type": "dotnet",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/RTLSDR.FMDAB.Console/bin/Debug/net9.0/RTLSDR.FMDAB.Console.dll",
            "args": ["-fm","-f" , "96900000"],
            "console": "externalTerminal"
        },        
        {
            "name": "FM play 96.9 FM from /temp/FM.raw",
            //"type": "dotnet",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/RTLSDR.FMDAB.Console/bin/Debug/net9.0/RTLSDR.FMDAB.Console.dll",
            "args": ["-fm","/temp/FM.raw"]
        },
        {
            "name": "Uno Desktop",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-uno-desktop",          
            "program": "${workspaceFolder}/RTLSDR.FMDAB.UNO/bin/Debug/net9.0-desktop/RTLSDR.FMDAB.UNO.dll",
            "args": ["-f","7C"],
            "launchSettingsProfile": "RTLSDR.FMDAB.UNO (Desktop)",
            "env": {
                "DOTNET_MODIFIABLE_ASSEMBLIES": "debug"
            },
            "cwd": "${workspaceFolder}/RTLSDR.FMDAB.UNO",          
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Uno - wasm",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5000",
            "webRoot": "${workspaceFolder}/RTLSDR.FMDAB.UNO",
            "inspectUri": "{wsProtocol}://{url.hostname}:{url.port}/_framework/debug/ws-proxy?browser={browserInspectUri}",
            "timeout": 30000,
            "preLaunchTask": "build-uno-wasm",
            "server": {
                "runtimeExecutable": "dotnet",
                "program": "run",
                "args": ["--no-build","-f","net8.0-browserwasm","--launch-profile", "RTLSDR.FMDAB.UNO (WebAssembly)"],
                "outputCapture": "std",
                "timeout": 30000,
                "cwd": "${workspaceFolder}/RTLSDR.FMDAB.UNO"
            }
        }
    ]
}