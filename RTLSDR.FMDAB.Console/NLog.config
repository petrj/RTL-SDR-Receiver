<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="nlog-internal.log">

	<targets>

		<target name="logfile"
			xsi:type="File"
			fileName="RTLSDR.FMDAB.Console.log"
			archiveFileName="RTLSDR.FMDAB.Console-{#}.log"
			archiveEvery="Day"
			archiveNumbering="Date"
			maxArchiveFiles="5"
			archiveDateFormat="yyyy-MM-dd-HH-mm"
			encoding="UTF-8"
			layout="${longdate} ${uppercase:${level}}|${threadid}|${message}" />

		<target name="udp" 
			xsi:type="Network" 
			address="udp4://localhost:9999" 
			layout="${longdate} ${uppercase:${level}}|${threadid}|${message}"
			enableBroadcast="true"/>

		<target name="console" xsi:type="Console" layout="${longdate} ${uppercase:${level}}|${threadid}|${message}"/>

	</targets>

	<rules>
		<logger name="*" minlevel="Trace" writeTo="logfile,udp" />
	</rules>

</nlog>